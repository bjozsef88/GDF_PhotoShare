@model IEnumerable<PhotoShare.Models.Photo>

@{
    ViewBag.Title = "Photo Share";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    <h1>Képek</h1>
    <p>Ezen az oldalon válogathatsz kedvedre a feltöltött képek közül...</p>
</div>
@{
    int i = 0;
}

@foreach (PhotoShare.Models.Photo photo in Model)
{
    if (i == 0 || i % 3 == 0)
    {
        @:<div class="row">
    }


    <div class="col-md-4">
        <div class="thumbnail">
            <a data-fancybox href="/Photos/GetPhoto/@photo.Id" data-type="image" data-caption="@photo.Title">
                <img src="/Photos/GetThumbnail/@photo.Id" alt="Lights" style="width:100%">
                <div class="caption">
                    <p>
                        <strong>@photo.Title</strong><br />
                        Feltöltötte: @photo.Name (@photo.Email)<br />
                        <i>@photo.UploadedAt</i>
                    </p>
                </div>
            </a>
        </div>
    </div>

    if ((i + 1) % 3 == 0 || i == Model.Count() - 1)
    {
        @:</div>
    }

    i++;
}
